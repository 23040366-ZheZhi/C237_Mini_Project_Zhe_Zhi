<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>Game Store App</title>
    </head>
<body>
    
    <%- include ('partials/navbar.ejs') %>

    <div class="container">
        <br>
        <div class="text-center"><h2>Add New Game</h2></div>
        <br>
        <div class="text-center">
            <form action="/addGame" method="POST" enctype="multipart/form-data">
                <label for="name">Game Name:</label><br>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter Game's Name" required><br><br>

                <label for="price">Price:</label><br>
                <input type="text" class="form-control" id="price" placeholder="Enter Price" name="price" min="0" step="1"required><br><br>

                <label for="description">Description:</label><br>
                <input type="text" class="form-control" id="description" placeholder="Give Description Of Game" name="description" min="0" step="0.01" required><br><br>

                <label for="age">Age Rating:</label><br>
                <input type="text" class="form-control" id="age" name="age" placeholder="Enter Age Rating (If any)" required><br><br>

                <label for="image">Image:</label><br>
                <input type="file" class="form-control" id="image" name="image" accept="image/*" required><br><br>

                <button class="btn btn-primary" type="submit">Submit</button>

                <a href="/" class="btn btn-primary">Back</a>
            </form>
        </div>
    </div>
</body>
</html>
